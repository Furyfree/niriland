{
  // --- Startup & Window Lifecycle ---
  "restore_on_startup": "last_workspace", // Re-open last project when launching Zed.
  "on_last_window_closed": "quit_app",

  // --- AI & Assistant ---
  "edit_predictions": {
    "mode": "subtle"
  },
  "agent": {
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5.3-codex"
    }
  },
  "agent_ui_font_size": 13.0,
  "agent_buffer_font_size": 12.0,

  // --- Tabs & Top UI ---
  "tab_bar": {
    "show": true, // Keep the tab bar visible.
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "tabs": {
    "close_position": "right", // Close button on the right.
    "file_icons": false, // No icons in tabs.
    "git_status": false, // No git decorations in tabs.
    "activate_on_close": "history", // Return to last-used tab when closing.
    "show_close_button": "hover",
    "show_diagnostics": "off"
  },
  "preview_tabs": {
    "enabled": false // Disable preview tabs so files open as real tabs.
  },
  "toolbar": {
    "agent_review": false,
    "selections_menu": false,
    "quick_actions": false,
    "breadcrumbs": true // Show breadcrumbs at the top.
  },
  "scrollbar": {
    "axes": { "vertical": true, "horizontal": true },
    "diagnostics": "warning", // Only show warning-level markers.
    "show": "auto"
  },

  // --- Editing Behavior ---
  "show_whitespaces": "trailing", // Only show trailing whitespace.
  "jsx_tag_auto_close": { "enabled": true },
  "always_treat_brackets_as_autoclosed": false,
  "use_auto_surround": true,
  "use_autoclose": true,
  "inline_code_actions": false, // Disable noisy lightbulbs.
  "auto_signature_help": true,

  // --- Formatting & Save ---
  "format_on_save": "off", // Keep format-on-save disabled.
  "remove_trailing_whitespace_on_save": true,
  "ensure_final_newline_on_save": true,
  "use_on_type_format": false, // Avoid lag while typing.
  "autosave": "off",

  // --- Structure & Guides ---
  "indent_guides": {
    "background_coloring": "indent_aware",
    "coloring": "fixed",
    "active_line_width": 2,
    "line_width": 1,
    "enabled": true
  },
  "gutter": {
    "min_line_number_digits": 2, // Cleaner line-number alignment.
    "folds": false, // No folding icons.
    "runnables": false // Hide run icons.
  },
  "relative_line_numbers": "enabled", // Vim-style relative numbers.
  "soft_wrap": "none",
  "preferred_line_length": 100, // Soft indicator only.
  "show_wrap_guides": false,
  "outline_panel": {
    "button": false,
    "expand_outlines_with_depth": 50 // Auto-expand nested blocks.
  },
  "excerpt_context_lines": 1,
  "expand_excerpt_lines": 3,

  // --- Input & Scrolling ---
  "drag_and_drop_selection": { "delay": 200 },
  "hover_popover_delay": 200,
  "fast_scroll_sensitivity": 3.0,
  "scroll_sensitivity": 1.0,
  "horizontal_scroll_margin": 2.0,
  "vertical_scroll_margin": 2.0,

  // --- Visual Accessibility & Cursor ---
  "minimum_contrast_for_highlights": 40.0,
  "rounded_selection": false,
  "current_line_highlight": "line",
  "unnecessary_code_fade": 0.0,
  "hide_mouse": "never",
  "cursor_shape": "block",
  "cursor_blink": false,

  // --- Fonts ---
  "ui_font_family": "Inter",
  "ui_font_fallbacks": ["JetBrains Mono", "Noto Color Emoji"],
  "ui_font_weight": 400.0,
  "ui_font_size": 13.0,
  "buffer_font_family": "JetBrainsMono Nerd Font Mono",
  "buffer_font_fallbacks": ["JetBrainsMono Nerd Font", "JetBrains Mono", "Noto Color Emoji"],
  "buffer_font_weight": 400.0,
  "buffer_font_size": 13.0,
  "buffer_font_features": {
    "liga": false, // Disable ligatures for cleaner code.
    "calt": false
  },

  // --- Terminal ---
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font Mono"
  },

  // --- Extensions ---
  "auto_install_extensions": {
    "catppuccin": true,
    "rose-pine": true,
    "everforest": true,
    "gruvbox-material-mix": true,
    "dracula": true,
    "tokyo-night": true,
    "flexoki-themes": true,
    "kanagawa-themes": true,
    "github-theme": true,
    "github-dark-default": true,
    "one-dark-pro": true,
    "material-icon-theme": true,
    "html": true,
    "dockerfile": true,
    "docker-compose": false,
    "ansible": true,
    "dart": true,
    "elixir": true,
    "git-firefly": true,
    "lua": true,
    "nix": true,
    "svelte": true,
    "toml": true,
    "kotlin": true,
    "macos-classic": true,
    "scala": true,
    "swift": true,
    "xml": true,
    "csharp": true,
    "ini": true,
    "latex": true,
    "opencode": true,
    "scheme": true,
    "terraform": true,
    "zig": true,
    "csv": true,
    "fsharp": true,
    "graphql": true,
    "java": true,
    "log": true,
    "nginx": true,
    "rainbow-csv": true,
    "sql": true
  },
  "auto_update_extensions": {
    "html": true,
    "dockerfile": true,
    "docker-compose": false,
    "ansible": true,
    "dart": true,
    "elixir": true,
    "git-firefly": true,
    "lua": true,
    "nix": true,
    "svelte": true,
    "toml": true,
    "kotlin": true,
    "macos-classic": true,
    "scala": true,
    "swift": true,
    "xml": true,
    "csharp": true,
    "ini": true,
    "latex": true,
    "opencode": true,
    "scheme": true,
    "terraform": true,
    "zig": true,
    "csv": true,
    "fsharp": true,
    "graphql": true,
    "java": true,
    "log": true,
    "nginx": true,
    "rainbow-csv": true,
    "sql": true
  },

  // --- Theme & Icons ---
  "icon_theme": {
    "mode": "system",
    "light": "Material Icon Theme",
    "dark": "Material Icon Theme"
  },
  "theme": {
    "mode": "system",
    "light": "GitHub Dark",
    "dark": "GitHub Dark"
  },

  // --- Privacy ---
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  // --- Keymap ---
  "base_keymap": "VSCode" // Keeps keybindings aligned with your VSCodium setup.
}
