#!/usr/bin/env bash

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
source "$SCRIPT_DIR/../lib/common"

log "Installing gaming apps..."

install_package \
  steam \
  prismlauncher \
  faugus-launcher \
  wowup-cf-bin

require_paru
install_aur_package modrinth-app-bin

log_success "Gaming apps setup complete."
